<resources>
    <!-- Base application theme. -->
    <style name="Theme.GOSOPTAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_600</item>
        <item name="colorPrimaryVariant">@color/yellow_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/grey_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Neutral Key Color -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/grey_50</item>
        <item name="colorOnSurface">@color/grey_300</item>
        <item name="colorSurfaceVariant">@color/grey_400</item>
        <item name="colorOnSurfaceInverse">@color/grey_500</item>
        <item name="colorOnSurfaceVariant">@color/grey_400</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Font theme -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.GOSOPTAndroid.DisplayLarge</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.GOSOPTAndroid.HeadLineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.GOSOPTAndroid.HeadLineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.GOSOPTAndroid.HeadLineSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.GOSOPTAndroid.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.GOSOPTAndroid.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.GOSOPTAndroid.BodySmall</item>
    </style>
</resources>
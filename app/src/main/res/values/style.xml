<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.GOSOPTAndroid" parent="">
        <item name="android:fontFamily">@font/sopt_font</item>
        <item name="fontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.DisplayLarge">
        <item name="android:fontFamily">@font/pretendard_extrabold</item>
        <item name="android:fontWeight">800</item>
        <item name="android:textSize">26sp</item>
        <item name="lineHeight">30dp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.HeadLineLarge">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textSize">30sp</item>
        <item name="lineHeight">30dp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.HeadLineMedium">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">30dp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.HeadLineSmall">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.BodyLarge">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">25dp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.BodyMedium">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20dp</item>
    </style>

    <style name="TextAppearance.GOSOPTAndroid.BodySmall">
        <item name="android:fontFamily">@font/pretendard_light</item>
        <item name="android:fontWeight">300</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">15dp</item>
    </style>

</resources>